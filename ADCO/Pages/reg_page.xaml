<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ADCO.Pages.reg_page"
             Title="reg_page">
    <VerticalStackLayout BackgroundColor="White">
        <Image Source="oaks.png" SemanticProperties.Description="OAKS Logo"                   
                   TranslationY="-140"
                   Aspect="Center"
                   Scale="0.48"
                   HeightRequest="600"
                   WidthRequest="600"
                   VerticalOptions="Start"
                   HorizontalOptions="Center"/>

        <Label Text="REGISTRO"
                   TranslationY="-285"
                   FontFamily="Inter"
                   HorizontalOptions="Center"
                   VerticalOptions="Start"
                   VerticalTextAlignment="Start"
                   FontSize="25"
                   TextColor="#2E2E2E"
                   FontAttributes="Bold"/>

        <Label Text="Usuario"
                   TranslationY="-250"
                   FontFamily="Inter"
                   TranslationX="615"
                   FontSize="Medium"
                   TextColor="#2E2E2E"
                   FontAttributes="None"/>

        <Entry
                x:Name="user"
                Text="{Binding Username}"
                BackgroundColor="#E7E7E7"
                HeightRequest="45"
                WidthRequest="340"
                TranslationX="15"
                TranslationY="-240"
                HorizontalOptions="Center"
                FontFamily="Inter"
                FontSize="20"
                TextColor="#2E2E2E"
                />
        <Label Text="Contraseña"
                   TranslationY="-230"
                   FontFamily="Inter"
                   TranslationX="615"
                   VerticalOptions="Start"
                   VerticalTextAlignment="Start"
                   FontSize="Medium"
                   TextColor="#2E2E2E"
                   FontAttributes="None"/>

        <Entry
                x:Name="pass"
                IsPassword="True"
               BackgroundColor="#E7E7E7"
                HeightRequest="45"
                WidthRequest="340"
                TranslationX="15"
               TranslationY="-220"                          
               HorizontalOptions="CenterAndExpand"
               FontFamily="Inter"
               FontSize="20"
               TextColor="#2E2E2E" />

        <ImageButton x:Name="showPasswordButton"                         
                         Clicked="OnShowPasswordClicked"
                         TranslationY="-258"
                         TranslationX="150"
             Source="show.png"
                         HeightRequest="30"
                         WidthRequest="30"
             BackgroundColor="Transparent" />



        <Button HorizontalOptions="Center"
                    Text="Crear"
                x:Name="createButton"
                Clicked="createButton_Clicked"
                    TextColor="White"
                    FontSize="Medium"
                    FontFamily="Inter"                    
                    WidthRequest="300"
                    HeightRequest="55"
                    BackgroundColor="#4DB57F"
                    VerticalOptions="Center"
                    TranslationX="10"
                    TranslationY="-205">

        </Button>

        <Label Text="¿Ya tienes una cuenta?"
                   TranslationY="-180"
                   FontFamily="Inter"
                   HorizontalOptions="Center"
                   FontSize="13"
                   TranslationX="-45"
                   TextColor="#2E2E2E"
                   FontAttributes="None"/>

        <Button Text="Accede"
                    Padding="-1,-1,-1,-1"
                x:Name="accessButton"
                Clicked="accessButton_Clicked"
                   TranslationY="-196"
                   FontFamily="Inter"
                   HorizontalOptions="Center"
                   FontSize="13"
                   TranslationX="60"
                   TextColor="#4DB57F"
                   FontAttributes="None"/>

        <Image Source="adco.png"
                   SemanticProperties.Description="OAKS Logo"                   
                   TranslationY="-300"
                   Aspect="Center"
                   Scale="0.15"
                   HeightRequest="300"
                   WidthRequest="600"
                   VerticalOptions="Start"
                   HorizontalOptions="Center"/>
    </VerticalStackLayout>
</ContentPage>